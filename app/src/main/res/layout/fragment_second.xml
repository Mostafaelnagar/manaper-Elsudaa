                    android:layout_margin="@dimen/dp8h"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp4h"

                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp2h"
                        android:layout_weight=".8"
                        android:gravity="start"
                        android:text="@string/FromText"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp2h"
                        android:layout_weight="1.2"
                        android:gravity="end"
                        android:text="@={tripDetailsViewModels.secondCityRequest.tripFirSecsFrom}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8h"
                app:cardCornerRadius="@dimen/dp8h"
                app:cardElevation="@dimen/dp4h">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp8h"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp4h"

                    android:weightSum="2">

                    <TextView
